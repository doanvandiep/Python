if __name__ == "__main__":

    n = int(input())

    if n < 2:
        print("-1")
    elif n % 2 == 0:
        print(n//2)
        for i in range(n//2):
            print(2,end = " ")
    else:
        print((n-1)//2)
        for i in range((n-1)//2-1):
            print(2,end = " ")
        print(3)

